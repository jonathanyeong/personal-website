---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a href={href} class:list={[className, "dark:text-slate-200 text-slate-700 before:bg-teal-600 before:dark:bg-teal-300 before:rounded-lg hover:before:opacity-100 relative", { active: isActive }]} {...props}>
	<slot />
</a>

<style>
    a:before {
        content: '';
        background: ;
        width: 100%;
        height: 2px;
        position: absolute;
        bottom: -4px;
        opacity: 0;
        transition: opacity 0.1s ease-in-out;
    }

    .active:before {
      opacity: 1;
    }
</style>
