---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
const { title, description, pubDate } = Astro.props;

const headTitle = title || SITE_TITLE;
const headDescription = description || SITE_DESCRIPTION;
const headPubDate = pubDate || new Date().toISOString();
---

<script>
	const theme = localStorage.getItem('theme')
	if (theme) {
		// If the user has chosen a theme we should respect their choice
		document.body.setAttribute('data-theme', theme);
		// Otherwise, we fall back to prefers-color-scheme.
	}
</script>

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={headTitle} description={headDescription} pubDate={headPubDate} />
		<link
                  rel="alternate"
                  type="application/rss+xml"
                  title={SITE_TITLE}
                  href={new URL("rss.xml", Astro.site)}
                />


	</head>
	<body>
		<div class="container flow">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>

<style>
	.container {
		max-width: 100vw;
		margin: 0 auto;
		padding: 0 var(--space-s);

		@media screen and (min-width: 940px) {
			max-width: 50vw;
		}
	}
</style>