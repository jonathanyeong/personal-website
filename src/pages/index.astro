---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import showDraftPosts from '../utilities/showDraftPosts'
import showScheduledPosts from '../utilities/showScheduledPosts'

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).filter((post) => {
	console.log(`for title: ${post.data.title}. isDraft: ${showDraftPosts(post)} showScheduledPost: ${showScheduledPosts(post)}`)
	return showDraftPosts(post) && showScheduledPosts(post)
});

---

<BaseLayout>
    <p class="mb-16">
				Welcome ðŸ‘‹! My name's Jono Yeong, I'm a Staff Software Engineer from Australia currently based in Canada.
				This blog is a collection of notes on topics that I find interesting and exciting.
        If you want to stay up to date, subscribe to my <a href="/rss.xml" class="text-link">RSS</a>.
    </p>

	<ul class="flex flex-col gap-y-8">
		{
			posts.map((post) => (
				<li class="flex justify-between gap-4">
					<a href={`/${post.slug}/`} class="text-link">{post.data.title}</a>
					<FormattedDate date={post.data.updatedDate ? post.data.updatedDate : post.data.pubDate} class="shrink-0" />
				</li>
			))
		}
	</ul>
</BaseLayout>
