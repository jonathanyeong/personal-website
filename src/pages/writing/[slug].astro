---
import type { BlogPost } from '@utilities/getAllPosts';
import { getCollection, render } from 'astro:content';
import BlogPostLayout from '@layouts/BlogPostLayout.astro';
export async function getStaticPaths() {
	const posts = await getCollection('blog');
	const ghostPosts = await getCollection('ghostCmsPosts');

	const blogPaths = posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));

	const ghostPaths = ghostPosts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
	return [...blogPaths, ...ghostPaths];
}
type Props = BlogPost;
const post = Astro.props;

const { Content, remarkPluginFrontmatter } = await render(post);

const minutesRead = post.collection === 'blog' ? remarkPluginFrontmatter?.minutesRead : post.data.readingTime

const postData = { minutesRead, ...post.data }

---

<BlogPostLayout {...postData}>
	<Content />
</BlogPostLayout>
